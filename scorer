#!/usr/bin/env ruby

require_relative 'lib/scorer.rb'
require_relative 'lib/notification_system.rb'
require 'optparse'

flags = {}
game_index = nil

opt_parser = OptionParser.new do |opt|
  opt.banner = "Usage:\n./scorer"
  opt.banner += "\n./scorer [flags] [value]"

  opt.separator  ""
  opt.separator  "flags"

  opt.on("-d", "--daemon", "tell the process to run as a daemon") do |v|
    flags[:purpose] = 'daemon'
    game_index = v
  end

  opt.on("-k", "--kill", "kill the daemon process if its running") do
    flags[:purpose] = 'kill'
  end

  opt.on('-l', '--list', 'list all the present matches') do
    flags[:purpose] = 'list'
  end

  opt.on("-h", "--help", "help") do
    flags[:purpose] = 'help'
    puts opt_parser
  end
end

begin
  opt_parser.parse!
rescue OptionParser::ParseError
  puts opt_parser
  exit(0)
end

purpose = flags[:purpose] || 'run'

scorer = Scorer.new(NotificationSystem.new, $0)


case purpose
  when 'daemon'
    scorer.daemon game_index
  when 'kill'
    scorer.kill
  when 'run'
    game_index = Integer(ARGV.first) rescue nil unless game_index
    scorer.run game_index
  when 'list'
    scorer.list
end
